{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "redis",
      "image": "arm64v8/redis:8-alpine",
      "essential": false,
      "memory": 128,
      "portMappings": [
        { "containerPort": 6379 }
      ]
    },
    {
      "name": "web1",
      "image": "public.ecr.aws/e0s8n6f1/nginx-node-redis-web:latest",
      "essential": false,
      "links": ["redis"],
      "memory": 256,
      "portMappings": [
        { "containerPort": 5000 }
      ]
    },
    {
      "name": "web2",
      "image": "public.ecr.aws/e0s8n6f1/nginx-node-redis-web:latest",
      "essential": false,
      "links": ["redis"],
      "memory": 256,
      "portMappings": [
        { "containerPort": 5000 }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "public.ecr.aws/e0s8n6f1/nginx-node-redis-nginx:latest",
      "essential": true,
      "memory": 128,
      "links": ["web1", "web2"],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ]
}
